}

.list_container {
  display: flex;
  flex-direction: column;
  width: 100%;
  font-family: "Arial";
}

.item-list {
  position: relative;
  width: 100%;
  height: 150rpx;
  margin-left: 20rpx;
}

.item-list:first-child {
  border-top: 1px solid #ccc;
}

.item-container {
  position: absolute;
  top: 0;
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  background-color: white;
  border-radius: 2.6% 2.6% 1.6% 1.6%;
  /* border-bottom: 1px solid #ccc; *//* display: flex;
  flex-direction: row;
  width:96vw;
