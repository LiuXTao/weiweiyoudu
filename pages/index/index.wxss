/**index.wxss**/

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f3f3f3;
  position: fixed;
  /* align-items: center; *//* justify-content: space-between; *//* padding: 200rpx 0; *//* box-sizing: border-box; */
}
.user-btn{

}
.top-container{
   width: 100%;
  height: 440rpx;
}
.user-pic {
  width:100%;
  height:100%;
  margin-bottom: 10rpx;
  background:url("https://i.loli.net/2018/06/13/5b207e7e17adb.jpg");

}

.left_container {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  background-color: white;
}

/* .info{
  width:100%;
  height:100%;
} */

.icon {
  height: 40rpx;
  width: 40rpx;
  margin: auto 0rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.font1 {
  font-weight: 600;
  font-size: 40rpx;
  color: #000;
}

.font2 {
  font-weight: 500;
  font-size: 34rpx;
  color: black;
  line-height: 60rpx;
  letter-spacing: 3rpx;
}

.tips_container {
  display: flex;
  flex-direction: column;
  width: 90vw;
  margin: 10rpx auto;
}

page {
  background-color: #f0f5f9;
  position: fixed;
}

.head_img {
  width: 100%;
  height: 280rpx;
  filter: blur(9px);
}

.userinfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  width:100%;
  height:100%;
}

.userinfo-avatar {
 
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  border: 7rpx solid #fff;
  box-shadow: 0 0 3rpx #eee;
}

.label-bar {
  margin-top:20rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.label {
  margin:10rpx;
  width: 188rpx;
  height: 55rpx;
}


.label-name {
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  font-weight: 400;
  margin-top:8rpx;
  margin-left:46rpx;
  letter-spacing: 1rpx;
}

.userinfo-nickname {
  color: #fff;
  font-family: "PingFang SC";
  font-size: 34rpx;
  font-weight: 400;
}

.usermotto {
  margin-top: 200px;
}

.line_container {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  justify-content: space-between;
  background-color: white;
  margin-top: 5rpx;
}

.line_text {
  font-size: 33rpx;
  color: #404040;
  font-weight: 400;
  font-family: "PingFang SC";
  line-height: 90rpx;
  margin-left: 6rpx;
  letter-spacing: 1rpx;
}

.line_arrow {
  height: 34rpx;
  width: 34rpx;
  margin: auto 26rpx;
}
