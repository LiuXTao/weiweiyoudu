/* pages/list/list.wxss */

.list_container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background-color: #f3f3f3;
  align-items: center;
  margin: 10prx;
}

/* 图片326宽 */

.NoMore {
  width: 80vw;
  font-size: 20rpx;
  color: gray;
  font-style: oblique;
  margin: 10rpx auto;
}

.scrolltxt {
  display: flex;
  flex-direction: row;
  padding: 0 10rpx;
  background: #fafad2;
}

.marquee_box {
  position: relative;
  display: block;
  color: #60607a;
  width: 98%;
  height: 70rpx;
  overflow: hidden;
  letter-spacing: 2rpx;
}

.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
  font-size: 14px;
  width: 98%;
  height: 70rpx;
  line-height: 70rpx;
}

.img_close {
  margin-top: 20rpx;
  float: right;
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.list_element {
  display: flex;
  flex-direction: column;
  /* box-shadow: #d6d6d6 11rpx 12rpx 30rpx 2rpx; */
  width: 666rpx;
  background-color: white;
  margin: 30rpx auto;
  border-radius: 2.6% 2.6% 1.6% 1.6%;
  /* 下边角的曲率不好控制 *//* border: 1px solid #d6d6d6; */
}

.title_image {
  width: 666rpx;
  height: 373rpx;
  border-radius: 2.6% 2.6% 0% 0%;
}

.author_image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

/* 左右距20px */

.upper_container {
  display: flex;
  flex-direction: row;
  width: 580rpx;
  height: 60rpx;
  margin: 16rpx auto;
  justify-content: space-between;
}

.views_image {
  width: 38rpx;
  height: 38rpx;
  margin: auto 0;
}

.author_container {
  display: flex;
  flex-direction: row;
  height: 50rpx;
}

.left_container {
  display: flex;
  flex-direction: row;
  height: 50rpx;
}

.right_container {
  display: flex;
  flex-direction: row;
  height: 50rpx;
}

.article_informantion {
  width: 666rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 0% 0% 1.6% 1.6%;
}

.love-container {
  display: flex;
  flex-direction: row;
  height: 50rpx;
}

.title {
  font-size: 32rpx;
  /* font-family: "Microsoft YaHei"; */
  font-family: "PingFang SC";
  line-height: 46rpx;
  width: 580rpx;
  font-weight: 600;
  margin: 20rpx auto;
}

.lower_container {
  display: flex;
  flex-direction: row;
  width: 590rpx;
  height: 50rpx;
  margin: 0rpx auto 18rpx;
  justify-content: space-between;
}

.love_num {
  font-size: 26rpx;
  margin-left: 8rpx;
  margin-right: 20rpx;
  line-height: 50rpx;
  color: #bfbfbf;
  font-family: "Arial";
  /* "Trebuchet Tahoma"; */
}

.author_name {
  font-size: 24rpx;
  color: #616ca6;
  font-family: "Arial";
  line-height: 50rpx;
  margin-right: 18rpx;
  letter-spacing: 1rpx;
}

.views_num {
  font-size: 24rpx;
  color: #bfbfbf;
  font-family: "Arial";
  line-height: 50rpx;
  margin-left: 10rpx;
  margin-right: 5rpx;
}

.text_container {
  display: flex;
  flex-direction: row;
  background-color: white;
  margin: auto 0;
}

.love_image {
  height: 44rpx;
  width: 44rpx;
}

.collect_image {
  height: 42rpx;
  width: 42rpx;
}

.views_container {
  display: flex;
  flex-direction: row;
}
